<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieProfile" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textViewStyle">@style/DefaultFontStyle</item>
    </style>
    <style name="SansSerifFont" parent="Widget.AppCompat.TextView">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    <style name="DefaultFontStyle" parent="SansSerifFont">
        <item name="android:textColor">@color/light_color</item>
    </style>
    <style name="MenuItemStyle" parent="DefaultFontStyle">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="MovieTitleStyle" parent="SansSerifFont">
        <item name="android:textColor">@color/movie_title_color</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="MovieFieldHeaderStyle" parent="SansSerifFont">
        <item name="android:textColor">@color/fragment_field_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="MovieFragmentDataStyle" parent="SansSerifFont">
        <item name="android:textColor">@color/secondary_light_color</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="RatingBar" parent="Base.Widget.AppCompat.RatingBar.Small">
        <item name="colorControlActivated">#FBFF12</item>
        <item name="colorControlNormal">#FFFFFF</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:numStars">10</item>
        <item name="android:stepSize">1</item>
    </style>
</resources>